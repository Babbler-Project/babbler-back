import { BaseSeeder } from '@adonisjs/lucid/seeders'
import Type from '#models/type'

export default class TypeSeeder extends BaseSeeder {
  async run() {
    // Liste des types par défaut avec leurs ID définis
    const types = [
      { id: 1, type: 'Backend' },
      { id: 2, type: 'Frontend' }
    ]

    for (const { id, type } of types) {
      // Mettre à jour ou créer chaque type avec son ID
      await Type.updateOrCreate(
        { id }, // Assurez-vous que l'ID est unique
        { type } // Mettre à jour ou créer avec le nom du type
      )
    }
  }
}
